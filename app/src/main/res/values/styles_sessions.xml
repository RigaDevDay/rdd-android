<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sessions.Text" parent="MatchWrap">
        <item name="android:fontFamily">@string/family_regular</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Sessions.Text.Body">
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Sessions.Text.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Sessions.Text.Speaker">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="Sessions.Text.Tags">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="Sessions.Text.Details">
    </style>

    <style name="Sessions.Text.Details.Header">
        <item name="android:textColor">@color/text_light_primary</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="Sessions.Text.Details.Header.Title">
        <item name="android:textSize">@dimen/text_size_subheading</item>
    </style>

    <style name="Sessions.Text.Details.Tags">
        <item name="android:textColor">@color/text_light_secondary</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="Sessions.Text.Button" parent="Wrap">
        <item name="android:background">@drawable/item_selector_borderless</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">Save</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

</resources>
