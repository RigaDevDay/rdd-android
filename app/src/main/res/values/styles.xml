<resources>

    <!-- Font family values -->
    <string name="family_regular">sans-serif</string>
    <string name="family_light">sans-serif-light</string>
    <string name="family_condensed">sans-serif-condensed</string>

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ScreenBackground" parent="Match">
        <item name="android:background">@color/screen_background</item>
    </style>

</resources>
