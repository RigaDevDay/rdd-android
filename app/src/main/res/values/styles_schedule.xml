<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Schedule.Item" parent="MatchWrap">
        <item name="android:padding">@dimen/base_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Schedule.Card" parent="MatchWrap">
        <item name="android:padding">@dimen/schedule_card_padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Schedule.Item.Text.Time" parent="Wrap">
        <item name="android:textColor">@color/text_dark_secondary</item>
        <item name="android:fontFamily">@string/family_condensed</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Schedule.Item.Text" parent="MatchWrap">
        <item name="android:fontFamily">@string/family_regular</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Schedule.Item.Text.Title">
    </style>

    <style name="Schedule.Item.Text.Title.Single">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Schedule.Item.Text.Speaker">
        <item name="android:fontFamily">@string/family_light</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Schedule.Item.Text.Room">
        <item name="android:fontFamily">@string/family_light</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="Schedule.Item.Text.Placeholder">
        <item name="android:textSize">@dimen/text_size_subheading</item>
    </style>

    <style name="Schedule.Item.Text.Placeholder.Subtitle">
        <item name="android:fontFamily">@string/family_light</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

</resources>
