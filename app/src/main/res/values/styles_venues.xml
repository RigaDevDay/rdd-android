<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Venues.Text" parent="MatchWrap">
        <item name="android:padding">@dimen/base_margin</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@string/family_regular</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="Venues.Text.Title">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="Venues.Text.Label">
        <item name="android:textSize">@dimen/text_size_subheading</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Venues.Text.Label.Link">
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/item_selector_borderless</item>
    </style>

    <style name="Venues.Text.Label.Type">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Venues.Label.Button" parent="Wrap">
        <item name="android:layout_width">@dimen/venues_open_button_size</item>
        <item name="android:layout_height">@dimen/venues_open_button_size</item>
        <item name="android:src">@drawable/vector_button_open</item>
        <item name="android:padding">@dimen/base_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/item_selector_borderless</item>
    </style>

    <style name="Venue.Label.Layout" parent="MatchWrap">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>