<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/ScreenBackground"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
    >

    <android.support.design.widget.AppBarLayout
        style="@style/MatchWrap"
        android:background="?attr/colorPrimary"
        >

        <include layout="@layout/part_toolbar"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/schedule_tabs"
            style="@style/MatchWrap"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/text_light_primary"
            app:tabSelectedTextColor="@color/text_light_primary"
            app:tabTextColor="@color/text_light_secondary"
            />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/schedule_pager"
        style="@style/Match"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:background="#543d"
        />

</LinearLayout>
